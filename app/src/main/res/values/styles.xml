<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->

        <!-- Status Bar | Action Bar | Navigation Bar -->

        <!-- color of Status Bar and Menu Icons On Pressed (use 700 color) -->
        <item name="colorPrimaryDark">#9E9E9E</item>
        <!-- opaqueness of Status Bar: Needs to Be Transparent for DrawerView -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- color of Action Bar (use 500 color) -->
        <item name="colorPrimary">#BDBDBD</item>
        <!-- color of Action Bar text-->
        <item name="android:textColor">#424242</item>
        <!-- color of Action Bar Menu Text-->
        <item name="android:actionMenuTextColor">#9E9E9E</item>
        <!-- color of Navigation Bar-->
        <item name="@android:navigationBarColor">@android:color/black</item>


        <!-- Main Elements -->
        <item name="@android:windowBackground">@color/window_background</item>
        <!-- accent coloring for views (ie: Checkboxes, EditText) -->
        <item name="colorAccent">#E0E0E0</item>
        <!--background color of buttons-->
        <item name="colorButtonNormal">#000</item>
        <!-- text color -->
        <item name="android:textColorPrimary">#424242</item>

    </style>

    <!-- Drawer Style -->
    <style name="DrawerTheme">
        <!--<item name="android:background">#FBE9E7</item>-->
    </style>

</resources>
