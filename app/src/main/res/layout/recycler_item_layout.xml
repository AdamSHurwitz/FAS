<!-- build child layout view for RecyclerAdapter with Object IDs to call in Adapter-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    // center item view horizontally and show views vertically
<!--android:gravity="center_horizontal"
    android:orientation="vertical">-->

    // images appear in circle shape
   <!-- <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recycler_item_image"
        android:layout_width="@dimen/list_item_image_largesize"
        android:layout_height="@dimen/list_item_image_largesize"
        android:layout_marginRight="16dp"
        android:gravity="center"/>

    // images appear normally-->
    <ImageView
        android:id="@+id/recycler_item_image"
        android:layout_width="@dimen/list_item_image_largeWidthsize"
        android:layout_height="@dimen/list_item_image_largeHeightsize"
        android:scaleType="centerCrop"/>
    <!--android:gravity="center"-->

    <TextView
        android:id="@+id/recycler_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:gravity="left"/>

</LinearLayout>